<!DOCTYPE html>
<html>
  <head>
    <title>One Month Rails Project</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
      <div class="container">
        <%= link_to "The Money Checklist", root_path, class: "navbar-brand" %>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item"><%= link_to "Home", root_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "About", about_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Contact", "#", class: "nav-link" %></li>
        </ul>
        <% if user_signed_in?%>
        <ul class="navbar-nav">
          <li class="nav-item float-right"><%= link_to "Log out", signout_path, method: :delete, class: "nav-link" %></li>
        </ul>
        <% else %>
        <ul class="navbar-nav">
          <li class="nav-item float-right"><%= link_to "Sign Up", signup_path, class: "nav-link btn btn-primary" %></li>
          <li class="nav-item float-right"><%= link_to "Sign In", signin_path, class: "nav-link" %></li>
        </ul>
        <% end %>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% flash.each do |name,message| %>
      <%= content_tag(:div, message, class: "alert alert-info #{name}") %>
    <% end %>

    <!-- Page Content -->
    <%= yield %>
    
    <!-- Footer -->
    <footer class="small text-muted">
      <div class="container">
        <hr>
        <center>
          <p>Â© 2016 The Money Checklist</p>
        </center>
      </div>
    </footer>

  </body>
</html>
